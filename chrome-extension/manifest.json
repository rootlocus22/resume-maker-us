{
    "name": "ExpertResume AI",
    "version": "1.0.2",
    "manifest_version": 3,
    "description": "AI Career Assistant with side panel resume tools. Build resumes from LinkedIn, generate cover letters, and track jobs.",
    "permissions": [
        "sidePanel",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://*.linkedin.com/*",
        "https://expertresume.us/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Open ExpertResume"
    },
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.linkedin.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}